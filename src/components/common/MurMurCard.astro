---
const {
  username = "Chelsea",
  handle = "@chelsea",
  time = "",
  text = "這是一則短貼文，可以放任何有趣想法或感受，也可以是學習小結！",
  image,
  actions = true,
} = Astro.props;
---

<article
  class="flex flex-col w-full p-4 dark:border-hub-border-dark
  hover:drop-shadow-md
  hover:bg-hub-background-nav
   dark:bg-hub-background-nav-dark
   hover:dark:bg-hub-background-dark rounded-xl shadow-md border max-w-xl mx-auto my-3 hover:shadow-lg transition"
>
  <div class="flex items-center gap-x-2">
    <span class="font-bold text-base text-hub-title dark:text-hub-title-dark"
      >{username}</span
    >
    <span class="text-base text-hub-title dark:text-hub-title-dark text-sm"
      >{handle}</span
    >
    <span class="mx-2 text-base text-hub-title dark:text-hub-title-dark text-xs"
    ></span>
    <span class="text-gray-400 text-xs">{time}</span>
  </div>
  <div
    class="mt-1 text-base border-hub-border
        dark:border-hub-border-dark
      dark:bg-hub-backgroundwhitespace-pre-line"
  >
  <span class="font-bold text-base text-hub-title dark:text-hub-title-dark"
      >{text}</span
    >
  </div>
  {
    image && (
      <img
        src={image}
        alt="tweet image"
        class="mt-2 max-h-48 rounded-xl border"
      />
    )
  }
</article>
