---
const {
  id = "",
  href = "#",
  title = "Título predeterminado",
  subtitle = "Subtítulo predeterminado",
  imageSrc = "",
  imageAlt = "Imagen del documento",
} = Astro.props;
---

<a
  id={id}
  href={href}
  class="rounded-lg flex items-stretch gap-4 border-[1px] border-hub-border hover:drop-shadow-sm hover:bg-hub-light-bg-2 transition-all duration-300"
  target="_blank"
  rel="noopener noreferrer"
>
  <!-- Contenedor izquierdo: Imagen -->
  <div
    class="w-[92px] aspect-square rounded-l-lg overflow-hidden flex-shrink-0"
  >
    <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover" />
  </div>

  <!-- Contenedor derecho: Información -->
  <div class="flex flex-col justify-center py-3 pr-2 flex-grow gap-y-3">
    <div>
      <h2 class="text-sm text-hub-title text-wrap">{title}</h2>
      <h3 class="text-slate-700/90 text-xs">{subtitle}</h3>
    </div>
    <small class="text-hub-subtitle text-xs">{href}</small>
  </div>
</a>
